<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context="edu.cnm.deepdive.abqparks.fragment.LocalParkFragment">

  <com.google.android.gms.maps.MapView
    android:id="@+id/local_map_view"
    android:layout_width="match_parent"
    android:layout_height="265dp"/>

  <Button
    android:id="@+id/review_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/reviews_button"
    app:layout_constraintTop_toBottomOf="@id/local_map_view"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

  <android.support.v7.widget.RecyclerView
    android:background="@color/colorBackground"
    android:id="@+id/review_list"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="150dp"
    android:visibility="gone"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/review_text"/>

  <EditText
    android:id="@+id/review_text"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:visibility="gone"
    app:layout_constraintTop_toBottomOf="@id/review_list"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/review_save_button"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <Button
    android:id="@+id/review_save_button"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:visibility="gone"
    app:layout_constraintTop_toBottomOf="@id/review_list"
    app:layout_constraintLeft_toRightOf="@id/review_text"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
